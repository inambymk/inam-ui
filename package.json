{
  "name": "inam-ui-monorepo",
  "private": true,
  "version": "0.1.0",
  "description": "Monorepo for Inam UI - CLI and Documentation",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:cli": "npm run build -w packages/inam-ui-cli",
    "build:docs": "npm run build -w apps/docs",
    "dev": "npm run dev --workspaces --if-present",
    "dev:cli": "npm run dev -w packages/inam-ui-cli",
    "dev:docs": "npm run dev -w apps/docs",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf node_modules packages/*/node_modules apps/*/node_modules packages/*/dist",
    "prepare": "husky || true"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.2.0",
    "typescript": "^5.6.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/inambymk/inam-ui"
  },
  "license": "MIT",
  "author": "Inam"
}
